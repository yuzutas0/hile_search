<main class="bag_items_main">
	<div class="bag_items_background">

		<!-- device -->
		<div class="bag_items_device">
			<p>【<%= @device.name %>】<br/>
				H：<%= @device.height %>cm　
				W：<%= @device.width %>cm　
				<% if @device.depth.present? %>
					D：<%= @device.depth %>cm
				<% end %>
			</p>
		</div>

		<!-- search -->
		<div class="bag_items_search">
			<p>test</p>
		</div>

		<div class="row">

			<!-- bag -->
			<% for bag in @bags %>
				<div class="col-xs-4">
					<div class="bag_items_card">
						<p><%= bag.id %><p>
						<p><%= bag.name %><p>
						<p>Image：<%= bag.image_url %><p>
						<p>URL：<%= bag.url_dp %><p>
						<p>Price：<%= bag.price %><p>
						<p>H：<%= bag.height %></p>
						<p>W：<%= bag.width %></p>
						<% if bag.depth.present? %>
							<p>D：<%= bag.depth %></p>
						<% end %>
						<p>
							<% bag.bag_tags.each do |tag| %>
								<%= tag.name %> <%= tag.id %>
								<% unless tag.id == bag.bag_tags.last.id %> | <% end %>
							<% end %>
						</p>
					</div>
				</div>
			<% end %>

		</div>

		<div class="bag_items_paginate"><%= paginate(@bags, :window => 3) %></div>
	</div>
</main>